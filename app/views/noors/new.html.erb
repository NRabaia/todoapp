<h1>New Home</h1>


<br>
<% if @noor.errors.any? %>
  <h2> The following errors prevented the todo from being saved </h2>
  <ul>
    <% @noor.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <%end%>
  </ul>
<% end %>

<%= form_for @noor do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  
<% end %>
