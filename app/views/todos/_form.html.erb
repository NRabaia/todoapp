<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<p>
 name: <%= @todo.name %>
</p>
<p>
 description : <%= @todo.description %>
</p>

<%= form_for @todo do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  

<p> <%= link_to "Go to the todos list", todos_path  %> </p>
  
<% end %>